{
    "Version": "2012-10-17",
    "Id": "example-ID",
    "Statement": [
        {
            "Sid": "example-statement-ID",
            "Effect": "Allow",
            "Principal": {
                "Service": "sns.amazonaws.com"
            },
            "Action": "sqs:SendMessage",
            "Resource": "${sqs_pool_arn}",
            "Condition": {
                "ArnEquals": {
                    "aws:SourceArn": "${sns_topic_arn}"
                }
            }
        }
    ]
}